            </class>
        </classes>
    </test>
    <test name="Merchandiser tab state test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testMerchandiserOrderingTabState"/>
