<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Tabs Navigation Tests" verbose="1" parallel="tests" thread-count="5">
    <test name="Administrator tabs navigation test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testAdministratorTabs"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Merchandiser tabs navigation test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testMerchandiserTabs"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Customer tabs navigation test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testCustomerTabs"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Supervisor tabs navigation test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testSupervisorTabs"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Administrator tabs state test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testAdministrationTabState"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Customer tabs state test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testCustomerOrderingTabState"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Supervisor tabs state test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testItemManagementTabState"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Merchandiser tabs state test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.TabsNavigationTest">
                <methods>
                    <include name="testMerchandiserOrderingTabState"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
