<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Item Management Page Tests" verbose="1" parallel="tests" thread-count="5">
    <test name="Add new product test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.AddNewProductTest">
                <methods>
                    <include name="testNewProductAdding"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Cancel product adding test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.AddNewProductTest">
                <methods>
                    <include name="testCancelProductAdding"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Delete product test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.DeleteProductTest">
                <methods>
                    <include name="testProductDeleting"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Cancel product deleting test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.DeleteProductTest">
                <methods>
                    <include name="testCancelProductDeleting"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Edit product test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.EditProductTest">
                <methods>
                    <include name="testProductEditing"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Create report test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.CreateReportTest">
                <methods>
                    <include name="testReportCreating"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Sorting test">
        <classes>
            <class name="com.softserveinc.edu.ita.tests.item_management_page.SortingTest">
                <methods>
                    <include name="testSorting"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
